extends ../layouts/main

block content
  .container.my-5
    .row.justify-content-center.align-items-center.min-vh-75
      .col-md-6
        .card.shadow
          .card-header.bg-primary.text-white.text-center
            h4.mb-0 Chỉnh sửa thông tin cá nhân
          .card-body.p-4
            if success && success.length > 0
              .alert.alert-success
                = success
            if error && error.length > 0
              .alert.alert-danger
                = error
                
            form(action="/user/edit-profile", method="POST")
              .mb-3
                label.form-label(for="name") Họ tên
                input.form-control#name(type="text", name="name", value=user.name, required)
              
              .mb-3
                label.form-label(for="email") Email
                input.form-control#email(type="email", name="email", value=user.email, required)
              
              .mb-3
                label.form-label(for="phone") Số điện thoại
                input.form-control#phone(type="text", name="phone", value=user.phone)
              
              .d-grid.gap-2.mt-4
                button.btn.btn-primary.btn-lg(type="submit") Lưu thay đổi
                a.btn.btn-outline-secondary(href="/user/profile") Quay lại