extends ../layouts/main

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow-sm
          .card-body.p-4
            h2.text-center.mb-4 Đặt lại mật khẩu
            
            if error
              .alert.alert-danger.alert-dismissible.fade.show
                = error
                button.btn-close(type="button", data-bs-dismiss="alert")
            
            form(action="/auth/reset-password", method="POST")
              input(type="hidden", name="token", value=token)
              
              .mb-3
                label.form-label(for="password") Mật khẩu mới
                input.form-control#password(type="password", name="password", required, minlength="6")
              
              .mb-4
                label.form-label(for="confirmPassword") Xác nhận mật khẩu
                input.form-control#confirmPassword(type="password", name="confirmPassword", required, minlength="6")
              
              .d-grid.gap-2
                button.btn.btn-primary(type="submit") Đặt lại mật khẩu
            
            .text-center.mt-4
              a(href="/auth/login") Quay lại đăng nhập