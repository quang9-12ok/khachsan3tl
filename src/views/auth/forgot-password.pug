extends ../layouts/main

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow-sm
          .card-body.p-4
            h2.text-center.mb-4 Quên mật khẩu
            
            if success
              .alert.alert-success.alert-dismissible.fade.show
                = success
                button.btn-close(type="button", data-bs-dismiss="alert")
            
            if error
              .alert.alert-danger.alert-dismissible.fade.show
                = error
                button.btn-close(type="button", data-bs-dismiss="alert")
            
            p.text-center.mb-4 Vui lòng nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu.
            
            form(action="/auth/forgot-password", method="POST")
              .mb-4
                label.form-label(for="email") Email
                input.form-control#email(type="email", name="email", required)
              
              .d-grid.gap-2
                button.btn.btn-primary(type="submit") Gửi yêu cầu
            
            .text-center.mt-4
              a(href="/auth/login") Quay lại đăng nhập