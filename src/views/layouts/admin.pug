doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title || 'Admin Dashboard - Khách sạn 3TL'} 
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/css/admin.css")
    block styles
  
  body
    .container-fluid
      .row
        // Sidebar
        .col-md-3.col-lg-2.d-md-block.bg-dark.sidebar.collapse
          .position-sticky.pt-3
            ul.nav.flex-column
              li.nav-item
                a.nav-link.text-white(href="/admin")
                  i.fas.fa-tachometer-alt.me-2
                  | Dashboard
              li.nav-item
                a.nav-link.text-white(href="/admin/rooms")
                  i.fas.fa-bed.me-2
                  | Quản lý Phòng
              li.nav-item
                a.nav-link.text-white(href="/admin/bookings")
                  i.fas.fa-calendar-check.me-2
                  | Quản lý Đặt phòng
              li.nav-item
                a.nav-link.text-white(href="/admin/services")
                  i.fas.fa-concierge-bell.me-2
                  | Quản lý Dịch vụ
              li.nav-item
                a.nav-link.text-white(href="/admin/users")
                  i.fas.fa-users.me-2
                  | Quản lý Người dùng
              li.nav-item
                a.nav-link.text-white(href="/admin/reports")
                  i.fas.fa-chart-bar.me-2
                  | Báo cáo
              li.nav-item
                a.nav-link.text-white(href="/auth/logout")
                  i.fas.fa-sign-out-alt.me-2
                  | Đăng xuất
        
        // Main content
        .col-md-9.ms-sm-auto.col-lg-10.px-md-4
          .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            h1.h2 #{title}
            .btn-toolbar.mb-2.mb-md-0
              block actions
          
          if success && success.length > 0
            .alert.alert-success.alert-dismissible.fade.show
              = success
              button.btn-close(type="button", data-bs-dismiss="alert")
          
          if error && error.length > 0
            .alert.alert-danger.alert-dismissible.fade.show
              = error
              button.btn-close(type="button", data-bs-dismiss="alert")
          
          block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js")
    // Add this to the scripts block at the bottom of the file
    
    block scripts
      script.
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
          var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
          var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
          });
        });